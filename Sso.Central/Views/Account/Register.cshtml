@using Sso.Central.ViewModels.Account;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model RegisterVM;

<form asp-controller="Account" asp-action="Register" method="POST" class="register-page">
    <div class="lead">
        <h1>Create an account</h1>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="card">
                <div class="card-header">
                    <h2>Local Account</h2>
                </div>

                <div class="card-body">
                    <form asp-route="Register">
                        <input type="hidden" asp-for="ReturnUrl" />

                        <div class="form-group">
                            <label asp-for="Username"></label>
                            <input class="form-control" placeholder="Email" asp-for="Username" autofocus>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <input type="password" class="form-control" placeholder="Password" asp-for="Password" autocomplete="off">
                        </div>
                        <button type="submit" class="btn btn-primary" name="button" value="login">Login</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</form>